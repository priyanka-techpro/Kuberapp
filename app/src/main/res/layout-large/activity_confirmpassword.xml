<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="true"
    tools:context=".Activity.ConfirmpasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/toplayer"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/signbg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="Sign up"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:fontFamily="@font/worksansmedium"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/password_ll"
            android:layout_below="@+id/toplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/password_txt_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18dp"
                android:fontFamily="@font/worksansregular"
                android:textColor="@color/ash"
                android:text="Password" />

            <EditText
                android:layout_below="@+id/password_txt_sign"
                android:id="@+id/ed_password_sign"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18dp"
                android:textColorHint="@color/mediumgrey"
                android:textColor="@color/ash"
                android:fontFamily="@font/worksansregular"
                android:hint="Enter your password"/>
            <View
                android:layout_below="@+id/ed_password_sign"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/mediumgrey"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/cpassword_ll"
            android:layout_below="@+id/password_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/cpassword_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18dp"
                android:fontFamily="@font/worksansregular"
                android:textColor="@color/ash"
                android:text="Confirm Password" />

            <EditText
                android:layout_below="@+id/cpassword_txt"
                android:id="@+id/ed_cpassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18dp"
                android:textColorHint="@color/mediumgrey"
                android:textColor="@color/ash"
                android:fontFamily="@font/worksansregular"
                android:hint="Enter your confirm password"/>
            <View
                android:layout_below="@+id/ed_cpassword"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/mediumgrey"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/gotodashboard"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/signinbtn">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sign up"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/worksansregular"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/gotodashboard"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/referals"
                    android:textColor="@color/ash"
                    android:textSize="16dp"
                    android:fontFamily="@font/worksansregular"
                    android:text="Already have an account?"/>

                <TextView
                    android:id="@+id/gotosignin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="18dp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/worksansregular"
                    android:layout_toRightOf="@+id/referals"
                    android:text="Sign in"/>
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>