<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="75dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/ll_layer_main"
    android:background="@color/transparent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/main_product_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/furnishing_main"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:cardCornerRadius="10dp"
            >

            <ImageView
                android:id="@+id/image_top"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:src="@drawable/bedsheet"
                android:scaleType="fitXY"
                />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/product_name_main"
            android:layout_below="@+id/furnishing_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Furnishing"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/worksansregular"
            android:textColor="@color/black"
            android:gravity="center_horizontal" />
    </RelativeLayout>








</LinearLayout>
