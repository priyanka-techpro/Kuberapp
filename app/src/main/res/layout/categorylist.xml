<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="95dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="2dp"
    android:id="@+id/ll_layer"
    android:background="@color/transparent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/main_ll"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/furnishing"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:cardCornerRadius="10dp"
        >

        <ImageView
            android:id="@+id/image_top"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:src="@drawable/bedsheet"
            android:scaleType="fitXY"
            />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/product_top"
        android:layout_below="@+id/furnishing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Furnishing"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"

        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/worksansregular"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />
</RelativeLayout>


    <RelativeLayout
        android:id="@+id/seemore"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/bluebox"
        >



        <TextView
            android:visibility="visible"
            android:id="@+id/loadmore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="See More"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/worksansregular"/>
    </RelativeLayout>






</LinearLayout>

