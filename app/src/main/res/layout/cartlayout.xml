<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/singleproduct"/>
        <TextView
            android:id="@+id/product_name"
            android:layout_toRightOf="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Bed Linen..."
            android:singleLine="true"
            android:fontFamily="@font/worksansregular"
            android:textSize="16dp"
            android:textColor="@color/ash"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Rs. 156/-"
            android:textColor="@color/blue"
            android:textSize="16dp"
            android:fontFamily="@font/worksansregular"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/product_size"
            android:layout_toRightOf="@+id/product_image"
            android:layout_below="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/ash"
            android:fontFamily="@font/worksansregular"
            android:text="Size 36''x26''"/>
        <RelativeLayout
            android:layout_below="@+id/product_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/product_image">
            <LinearLayout
                android:id="@+id/quantity_lay"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@drawable/whiteboxback">
                <ImageView
                    android:id="@+id/cart_minus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:src="@drawable/minus"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/quantity_cart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksansregular"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/cart_add"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:src="@drawable/addicon"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/delete_cart"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/delete"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
