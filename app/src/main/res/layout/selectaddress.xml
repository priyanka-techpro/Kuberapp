<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <RadioButton
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:button="@null"
            android:background="@drawable/radiogroup"
            />
        <TextView
            android:id="@+id/del_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/location"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/worksansmedium"
            android:text="Your Delivery Location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/worksansregular"
            android:text="OFFICE"
            />
        <TextView
            android:id="@+id/text_address"
            android:layout_below="@+id/del_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/location"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/worksansregular"
            android:text="Merlin Infinity,Kolkata,Saltlake,Sec-2,near Techno India, West Bengal"/>

    </RelativeLayout>

</LinearLayout>
